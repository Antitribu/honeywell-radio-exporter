{
  "dashboard": {
    "id": null,
    "title": "RAMSES RF System Monitor",
    "tags": ["ramses", "rf", "hvac", "home-automation"],
    "style": "dark",
    "timezone": "browser",
    "templating": {
      "list": [
        {
          "name": "zone",
          "type": "query",
          "label": "Zone",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": {
            "query": "label_values(ramses_zone_info, zone_name)",
            "refId": "PrometheusVariableQueryEditor-VariableQuery"
          },
          "refresh": 1,
          "regex": "",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "options": [],
          "sort": 1,
          "skipUrlSync": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ramses_messages_total[5m])",
            "legendFormat": "{{verb}} {{code}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 2,
        "title": "Active Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "ramses_active_devices",
            "legendFormat": "Active Devices"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Message Processing Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ramses_message_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ramses_message_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 4,
        "title": "Top Message Types",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (code, verb) (rate(ramses_message_types_total[5m])))",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true,
                "monitor": true,
                "origin_prometheus": true
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Device Communications",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (source_device, destination_device) (rate(ramses_device_communications_total[5m]))",
            "format": "heatmap"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ramses_message_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 7,
        "title": "Message Payload Size",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ramses_message_payload_size_bytes_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ramses_message_payload_size_bytes_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 25,
        "title": "Temperature Related",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Device Temperatures",
        "type": "graph",
        "targets": [
          {
            "expr": "ramses_device_temperature_celsius * on(device_id) group_left(device_name) ramses_device_info",
            "legendFormat": "{{device_name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 25
        },
        "yaxes": [
          {
            "format": "celsius",
            "label": "Temperature"
          }
        ],
        "lines": true,
        "points": false,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "rightSide": true,
          "avg": true,
          "min": true,
          "max": true,
          "current": false,
          "total": false,
          "values": true
        }
      },
      {
        "id": 15,
        "title": "Zone Setpoint vs Temperature",
        "type": "graph",
        "targets": [
          {
            "expr": "ramses_device_setpoint_celsius * on(zone_idx) group_left(zone_name) ramses_zone_info{zone_name=~\"$zone\"}",
            "legendFormat": "{{zone_name}} setpoint"
          },
          {
            "expr": "ramses_device_temperature_celsius * on(device_id) group_left(device_name) ramses_device_info",
            "legendFormat": "{{device_name}} actual"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 25
        },
        "yaxes": [
          {
            "format": "celsius",
            "label": "Temperature"
          }
        ],
        "lines": true,
        "points": false,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "rightSide": true,
          "avg": true,
          "min": true,
          "max": true,
          "current": false,
          "total": false,
          "values": true
        }
      },
      {
        "id": 9,
        "title": "Heat Demand by Zone",
        "type": "graph",
        "targets": [
          {
            "expr": "(ramses_heat_demand * on(zone_idx) group_left(zone_name) ramses_zone_info{zone_name=~\"$zone\"}) * 100",
            "legendFormat": "{{zone_name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 33
        },
        "yaxes": [
          {
            "format": "percent",
            "label": "Heat Demand",
            "min": 0,
            "max": 100
          }
        ],
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 10,
        "title": "Boiler Communication Health",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - ramses_boiler_last_seen_timestamp",
            "legendFormat": "{{boiler_id}} ({{boiler_name}})"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 12,
          "y": 33
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 120,
                  "color": "yellow"
                },
                {
                  "value": 300,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 11,
        "title": "Boiler Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ramses_boiler_messages_sent_total[5m]) * 60",
            "legendFormat": "Sent to {{boiler_id}}"
          },
          {
            "expr": "rate(ramses_boiler_messages_received_total[5m]) * 60",
            "legendFormat": "Received from {{boiler_id}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 41
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Messages/min"
          }
        ],
        "lines": true,
        "points": false,
        "linewidth": 2
      },
      {
        "id": 12,
        "title": "Boiler Response Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum by (boiler_id, boiler_name) (ramses_boiler_messages_received_total) / sum by (boiler_id, boiler_name) (ramses_boiler_messages_sent_total)",
            "legendFormat": "{{boiler_id}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 41
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 0.5,
                  "color": "yellow"
                },
                {
                  "value": 0.8,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Boiler Message Types",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (message_type) (ramses_boiler_messages_sent_total)",
            "legendFormat": "{{message_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 41
        }
      },
      {
        "id": 14,
        "title": "Boiler Message History",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (boiler_id, boiler_name, message_code, message_type) (ramses_boiler_messages_sent_total)",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 49
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true,
                "monitor": true,
                "origin_prometheus": true
              },
              "indexByName": {
                "boiler_id": 0,
                "boiler_name": 1,
                "message_code": 2,
                "message_type": 3,
                "Value": 4
              },
              "renameByName": {
                "boiler_id": "Boiler ID",
                "boiler_name": "Name",
                "message_code": "Code",
                "message_type": "Type",
                "Value": "Count"
              }
            }
          }
        ]
      },
      {
        "id": 16,
        "title": "Zone Window Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ramses_zone_window_open * on(zone_idx) group_left(zone_name) ramses_zone_info{zone_name=~\"$zone\"}",
            "legendFormat": "{{zone_name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 57
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Closed",
                    "color": "green"
                  },
                  "1": {
                    "text": "Open",
                    "color": "blue"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 17,
        "title": "System Sync Status",
        "type": "gauge",
        "targets": [
          {
            "expr": "ramses_system_sync_remaining_seconds",
            "legendFormat": "{{device_id}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 57
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 156,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 30,
                  "color": "yellow"
                },
                {
                  "value": 60,
                  "color": "green"
                }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 18,
        "title": "Device Last Seen",
        "type": "table",
        "targets": [
          {
            "expr": "time() - ramses_device_last_seen_timestamp * on(device_id) group_left(device_name) ramses_device_info",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "ramses_device_setpoint_celsius * on(device_id) group_left(device_name) ramses_device_info * on(zone_idx) group_left(zone_name) ramses_zone_info * 0 + 1",
            "format": "table",
            "instant": true,
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 57
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true,
                "monitor": true,
                "origin_prometheus": true,
                "Value #B": true,
                "zone_idx": true
              },
              "indexByName": {
                "device_id": 0,
                "device_name": 1,
                "zone_name": 2,
                "Value #A": 3
              },
              "renameByName": {
                "device_id": "Device ID",
                "device_name": "Device Name",
                "zone_name": "Zone",
                "Value #A": "Seconds Since Last Seen"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "color-background",
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Seconds Since Last Seen"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "s"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "value": 0,
                        "color": "green"
                      },
                      {
                        "value": 300,
                        "color": "yellow"
                      },
                      {
                        "value": 600,
                        "color": "red"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 19,
        "title": "Zone Modes",
        "type": "table",
        "targets": [
          {
            "expr": "ramses_zone_mode_info{zone_idx=~\".+\"} * on(zone_idx) group_left(zone_name) ramses_zone_info{zone_name=~\"$zone\"} == 1",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 65
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "Value": true,
                "device_id": true,
                "zone_idx": true,
                "job": true,
                "instance": true,
                "monitor": true,
                "origin_prometheus": true
              },
              "indexByName": {
                "zone_name": 0,
                "mode": 1
              },
              "renameByName": {
                "zone_name": "Zone",
                "mode": "Active Mode"
              }
            }
          }
        ]
      },
      {
        "id": 21,
        "title": "Boiler Setpoint",
        "type": "stat",
        "targets": [
          {
            "expr": "ramses_boiler_setpoint_celsius",
            "legendFormat": "{{boiler_name}} ({{boiler_id}})"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 68
        },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "blue",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 40
                },
                {
                  "color": "orange",
                  "value": 60
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 22,
        "title": "Boiler Modulation Level",
        "type": "gauge",
        "targets": [
          {
            "expr": "ramses_boiler_modulation_level * 100",
            "legendFormat": "{{boiler_name}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 68
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "blue",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 20
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "orange",
                  "value": 75
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 23,
        "title": "Boiler Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ramses_boiler_flame_active",
            "legendFormat": "Flame"
          },
          {
            "expr": "ramses_boiler_ch_active",
            "legendFormat": "Central Heating"
          },
          {
            "expr": "ramses_boiler_dhw_active",
            "legendFormat": "Hot Water"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 68
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "OFF",
                    "color": "semi-dark-blue"
                  },
                  "1": {
                    "text": "ON",
                    "color": "semi-dark-orange"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "semi-dark-blue",
                  "value": null
                },
                {
                  "color": "semi-dark-orange",
                  "value": 1
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 24,
        "title": "Boiler Setpoint & Modulation History",
        "type": "graph",
        "targets": [
          {
            "expr": "ramses_boiler_setpoint_celsius",
            "legendFormat": "Setpoint - {{boiler_name}}",
            "yAxisIndex": 0
          },
          {
            "expr": "ramses_boiler_modulation_level * 100",
            "legendFormat": "Modulation - {{boiler_name}}",
            "yAxisIndex": 1
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 68
        },
        "yaxes": [
          {
            "format": "celsius",
            "label": "Setpoint (Â°C)",
            "show": true
          },
          {
            "format": "percent",
            "label": "Modulation (%)",
            "show": true,
            "min": 0,
            "max": 100
          }
        ],
        "xaxis": {
          "mode": "time",
          "show": true
        },
        "legend": {
          "show": true,
          "alignAsTable": false,
          "avg": false,
          "current": true,
          "max": false,
          "min": false,
          "rightSide": false,
          "total": false,
          "values": true
        },
        "lines": true,
        "points": false,
        "linewidth": 2
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
